<%- include('./header.ejs')%>
<br><br><br>
	<section class="featured-blog mtb-40">
		<div class="container">
      <h1 style="font-family: sans-serif; font-weight: bold;">Explore Blogs</h1><br>
			<div class="row">
				<% blogs.forEach(function(blog, index) { %>
					<div class="col-md-4" data-aos="flip-left" data-aos-delay="<%= index * 100 %>" data-aos-duration="800">
						<div class="blog-box">
							<img src="<%= blog.img_url %>" alt="blog1" class="img-fluid" style="height: 250px; width: auto;"/>
							<h3 style="font-family: sans-serif; font-weight: bold;"><%= blog.title %></h3>
							<p style="font-family: sans-serif;">by <span>Gaurav Indoriya</span> on <span><%= blog.updatedAt %></span></p>
							<% const titleLines = blog.description.split(' ').slice(0,7).join(' ') + ''; %>
							<p style="font-family: sans-serif;"><%= titleLines %></p>
							<a href="/readBlog/<%= blog.id %>" class="btn btn-danger">Read more...</a>
						</div>
					</div>
				<% }); %>
			</div>
		</div>
	</section>	
  <%- include('./footer.ejs')%>