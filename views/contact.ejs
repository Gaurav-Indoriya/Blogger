<%- include('./header.ejs')%>
<br><br><br>
    <section class="cmspage mtb-40">
        <div class="container">
          <div class="page-desc">
            <div class="row justify-content-center">
              <div class="col-md-8">
                <h1 style="font-family: sans-serif; font-weight: bold;">Contact Us</h1><br>
                <% if (message.length > 0) { %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                <% } %>
                <form action="/msgInsert" method="post">
                  <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" required>
                  </div>
                  <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="E-Mail" required>
                  </div>
                  <div class="form-group">
                    <input type="text" name="phone" class="form-control" placeholder="Phone" required minlength="10" maxlength="10">
                  </div>
                  <div class="form-group">
                    <textarea name="message" rows="5" class="form-control" placeholder="Message" required></textarea>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-success" type="submit">Send Message</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </section>
    <%- include('./footer.ejs')%>