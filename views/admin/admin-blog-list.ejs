<%- include('./header.ejs') %> <br><br><br>
    <section class="dashboard-wrap mtb-40">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        <div class="dash-left">
                            <ul style="font-family: sans-serif; font-weight: bold;">
                                <li class="active"><a href="/dashboard" class="nav-link">Dashboard</a></li>
                                <li><a href="/adminBlogList" class="active nav-link">Blogs</a></li>
                                <li><a class="nav-link" href="/categories">Categories</a></li>
                                <li><a class="nav-link" href="/pages">Pages</a></li>
                                <li><a class="nav-link" href="/messageView">Messages</a></li>
                                <li><a class="nav-link" href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1 style="font-family: sans-serif; font-weight: bold;">BLOGS</h1>
                                    <% if (message.length> 0) { %>
                                        <div class="alert alert-success">
                                            <%= message %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="dash-nav">
                                    <a href="/addBlog" style="font-family: sans-serif; font-weight: bold;"
                                        class="btn btn-success">Add Post</a>
                                </div>
                            </div>
                            <div style="max-height: 500px; overflow-y: auto;">
                                <table class="table table-bordered table-striped"
                                    style="font-family: sans-serif; font-weight: 500; width: 100%;">
                                    <thead style="position: sticky; top: 0; background-color: white; z-index: 1;">
                                        <tr>
                                            <th>ID</th>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Category</th>
                                            <th>Posted On</th>
                                            <th colspan="2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% blogs.forEach(function(blog) { %>
                                            <tr>
                                                <td>
                                                    <%= blog.id %>
                                                </td>
                                                <td><img src="<%= blog.img_url %>" style="width: 70px; height: auto;">
                                                </td>
                                                <td>
                                                    <%= blog.title %>
                                                </td>
                                                <td>
                                                    <%= blog.category %>
                                                </td>
                                                <td>
                                                    <%= blog.updatedAt %>
                                                </td>
                                                <td><a href="/editBlog/<%=blog.id %>"
                                                        class="btn btn-info btn-sm">Edit</a></td>
                                                <td>
                                                    <a href="/deletePost/<%=blog.id %>" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this blog post?');">Delete</a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../footer.ejs') %>