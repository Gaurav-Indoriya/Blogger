<%- include('./header.ejs') %>
<br><br><br>
    <section class="dashboard-wrap mtb-40">
    	<div class="container">
            <div class="body-content">
        		<div class="row">
        			<div class="col-md-3">
                        <div class="dash-left">
                            <ul style="font-family: sans-serif; font-weight: bold;">
                                <li class="active"><a href="/dashboard" class="nav-link">Dashboard</a></li>
                                <li><a class="nav-link" href="/adminBlogList">Blogs</a></li>
                                <li><a class="nav-link" href="/categories">Categories</a></li>
                                <li><a class="nav-link" href="/pages">Pages</a></li>
                                <li><a class="nav-link active" href="/pages">Messages</a></li>
                                <li><a class="nav-link" href="/logout">Logout</a></li>
                            </ul>
                        </div>   
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <h1 style="font-family: sans-serif; font-weight: bold;">MESSAGES</h1><br>
                            <% if (message.length > 0) { %>
                                <div class="alert alert-success">
                                    <%= message %>
                                </div>
                                <% } %>
                            <div class="container">
                                <table class="table table-bordered table-striped" style="font-family: sans-serif; font-weight: 500;">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Message</th>
                                        <th>Action</th>
                                    </tr>
                                    <% viewMsg.forEach(function(msg) { %>
                                        <tr>
                                            <form action="/msgDelete/<%= msg.id %>" method="post">
                                            <td><%= msg.name %></td>
                                            <td><%= msg.email %></td>
                                            <td><%= msg.phone %></td>
                                            <td><%= msg.message %></td>
                                            <td>
                                              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog post?');">Delete</button>
                                            </td>
                                        </form>
                                        </tr>
                                        <% }) %>
                                </table>
                            </div>
                        </div>   
                    </div>
        		</div>
            </div>
    	</div>
    </section>
<%- include('../footer.ejs') %>